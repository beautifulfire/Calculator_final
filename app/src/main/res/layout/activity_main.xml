<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hello.application.MainActivity">

    <GridLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/gridLayout1"
        >
        <Button
            android:id="@+id/button31"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="≡"
            android:background="@drawable/button_design5"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            tools:layout_editor_absoluteX="5dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="5dp"
        android:id="@+id/gridLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/button1"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="C" />

        <Button
            android:id="@+id/button2"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="←" />

        <Button
            android:id="@+id/button3"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="( )" />

        <Button
            android:id="@+id/button4"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="%" />

        <Button
            android:id="@+id/button5"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="π" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout4"
        android:id="@+id/gridLayout5">

        <Button
            android:id="@+id/button6"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="sin" />

        <Button
            android:id="@+id/button7"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="√X" />

        <Button
            android:id="@+id/button8"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="x²" />

        <Button
            android:id="@+id/button9"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="x^y" />

        <Button
            android:id="@+id/button10"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design3"
            android:text="/" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout5"
        android:id="@+id/gridLayout6">

        <Button
            android:id="@+id/button11"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="cos" />

        <Button
            android:id="@+id/button12"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="7" />

        <Button
            android:id="@+id/button13"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="8" />

        <Button
            android:id="@+id/button14"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="9" />

        <Button
            android:id="@+id/button15"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design3"
            android:text="*" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout6"
        android:id="@+id/gridLayout7">

        <Button
            android:id="@+id/button16"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="tan" />

        <Button
            android:id="@+id/button17"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="4" />

        <Button
            android:id="@+id/button18"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="5" />

        <Button
            android:id="@+id/button19"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="6" />

        <Button
            android:id="@+id/button20"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design3"
            android:text="-" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout7"
        android:id="@+id/gridLayout8">

        <Button
            android:id="@+id/button21"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="ln" />

        <Button
            android:id="@+id/button22"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="1" />

        <Button
            android:id="@+id/button23"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="2" />

        <Button
            android:id="@+id/button24"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="3" />

        <Button
            android:id="@+id/button25"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design3"
            android:text="+" />
    </GridLayout>

    <GridLayout
        android:layout_width="412dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout8"
        tools:layout_editor_absoluteX="5dp"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/button26"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="lg" />

        <Button
            android:id="@+id/button27"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design1"
            android:text="e" />

        <Button
            android:id="@+id/button28"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="0" />

        <Button
            android:id="@+id/button29"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design2"
            android:text="." />

        <Button
            android:id="@+id/button30"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:background="@drawable/button_design4"
            android:text="=" />
    </GridLayout>


    <TextView
        android:id="@+id/textView"
        tools:layout_editor_absoluteX="-12dp"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:textSize="50dp"
        android:gravity="right|bottom"
        android:text=""
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:textSize="50dp"
        android:gravity="right|bottom"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:singleLine="true"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout1"/>

</android.support.constraint.ConstraintLayout>
