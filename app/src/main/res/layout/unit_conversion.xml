<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="410dp"
        android:layout_height="45dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button90"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/button_design8"
            android:text="≡" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="长度" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="280dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp">

        <TableLayout
            android:layout_width="70dp"
            android:layout_height="280dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button91"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_design9"
                    android:text="厘米" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button92"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_design9"
                    android:text="分米" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button93"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_design9"
                    android:text="米" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button94"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_design9"
                    android:text="千米" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="340dp"
            android:layout_height="280dp"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="40dp">>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="340dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:gravity="right|bottom"
                    android:singleLine="true"
                    android:textSize="30dp"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="340dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:gravity="right|bottom"
                    android:singleLine="true"
                    android:textSize="30dp"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="340dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:gravity="right|bottom"
                    android:singleLine="true"
                    android:textSize="30dp"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText10"
                    android:layout_width="340dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:gravity="right|bottom"
                    android:singleLine="true"
                    android:textSize="30dp"

                    />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="280dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="300dp"
                android:layout_height="210dp"
                tools:layout_editor_absoluteX="0dp">

                <TableRow
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <Button
                        android:id="@+id/button70"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="7" />

                    <Button
                        android:id="@+id/button71"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="8" />

                    <Button
                        android:id="@+id/button72"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="9" />

                </TableRow>

                <TableRow
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <Button
                        android:id="@+id/button73"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="4" />

                    <Button
                        android:id="@+id/button74"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="5" />

                    <Button
                        android:id="@+id/button75"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="6" />

                </TableRow>

                <TableRow
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <Button
                        android:id="@+id/button76"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="1" />

                    <Button
                        android:id="@+id/button77"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="2" />

                    <Button
                        android:id="@+id/button78"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_design6"
                        android:text="3" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button79"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design6"
                    android:text="0" />

                <Button
                    android:id="@+id/button80"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design6"
                    android:text="." />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="280dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button81"
                android:layout_width="112dp"
                android:layout_height="80dp"
                android:background="@drawable/button_design7"
                android:text="CE" />

            <Button
                android:id="@+id/button82"
                android:layout_width="112dp"
                android:layout_height="80dp"
                android:background="@drawable/button_design7"
                android:text="←" />

            <Button
                android:id="@+id/button83"
                android:layout_width="112dp"
                android:layout_height="120dp"
                android:background="@drawable/button_design9"
                android:text="转换" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>